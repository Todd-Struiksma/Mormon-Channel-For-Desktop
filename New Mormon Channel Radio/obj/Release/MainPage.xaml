<Page
    x:Class="New_Mormon_Channel_Radio.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:New_Mormon_Channel_Radio"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <AppBarButton x:ConnectionId='1' HorizontalAlignment="Stretch" Icon="Microphone" Label="Talk Radio" Margin="-300,100,-6,0" VerticalAlignment="Top"                           />
        <AppBarButton x:ConnectionId='2' HorizontalAlignment="Stretch" Icon="Audio" Label="Music Channel" Margin="-100,100,-6,0" VerticalAlignment="Top"                              RenderTransformOrigin="0.655,0.534"/>
        <AppBarButton x:ConnectionId='3' HorizontalAlignment="Stretch" Icon="World" Label="Spanish" Margin="300,100,-6,0" VerticalAlignment="Top"                             >

        </AppBarButton>
        <AppBarButton x:ConnectionId='4' HorizontalAlignment="Stretch" Icon="MusicInfo" Label="Mormon Tabernacle Choir" Margin="100,100,-6,0" VerticalAlignment="Top"                              Height="107"/>
        <Slider x:Name="Slider" HorizontalAlignment="Center" Margin="0,215,0,0" VerticalAlignment="Top" Width="388" Value="50"/>
        <MediaElement x:Name="MediaElement" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="691" Margin="355,302,0,0" AreTransportControlsEnabled="False"/>
    </Grid>
</Page>

